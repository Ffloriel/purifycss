{
    "env": {
        "test": {
            "presets": [
                "flow",
                "es2015"
            ],
            "plugins": [
                "transform-class-properties"
            ]
        },
        "development": {
            "presets": [
                [
                    "env",
                    {
                        "targets": {
                            "ie": 8
                        },
                        "modules": false
                    }
                ]
            ],
            "plugins": [
                "external-helpers",
                "transform-class-properties"
            ]
        }
    }
}